<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductosActivity">

    <Button
        android:id="@+id/btPersonas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personas ListView"/>

    <Button
        android:id="@+id/btPersonasSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personas Spinner"/>

    <Button
        android:id="@+id/btPersonasRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personas Recycler"/>

    <ListView
        android:id="@+id/lvProductos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>